.arrow
	padding-left 34px
	position relative
	text-transform uppercase
	letter-spacing: 2px
	&:before
		content ""
		position absolute
		display block
		width: 24px
		height: 24px
		background: url(../img/main/arrow.svg)
		left: 0
		top: -3px
		transition: $default-transition
	&:hover
		opacity 1
		&:before
			transform: translateX(5px)






.video
	&__wrapper-block
		max-width: 1120px
		margin: auto
		padding: 120px 15px 0
		position relative
	&__abs-1
		position absolute
		left: 2%
		top: 47%
		max-width: 320px
		z-index 3
	&__abs-2
		position absolute
		left: 17%
		top: 44%
		max-width: 840px
		z-index 2
	&__abs-3
		position absolute
		left: 70%
		top: 131%
		max-width: 320px
		z-index 1
	&__block
		background-size: cover
		background-repeat: no-repeat
		text-align: center;
		overflow: hidden;
		width: 100%;
		padding-top: 56.25%;
		background: #fff
		&.activeVideo 
			background: none
			.video__startBlock
				opacity 1
				pointer-events: none
			.video__iframe
				opacity 1
				pointer-events: all
	&__startBlock
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		width: 100%;
		height: 100%;
		&-btn
			position: absolute;
			top: 12.5%;
			left: 60%;
			width: 18.75%;
			-webkit-transform: translate(-50%, -50%);
			transform: translate(-50%, -50%);
			cursor: pointer;
			-webkit-transition: all 0.3s ease-in;
			transition: all 0.3s ease-in;
			display: -webkit-box;
			display: -ms-flexbox;
			display: flex;
			-webkit-box-pack: center;
			-ms-flex-pack: center;
			justify-content: center;
			-webkit-box-align: center;
			-ms-flex-align: center;
			align-items: center;
			transition: $default-transition
			text-transform uppercase
			font-weight: 400;
			font-size: 14px;
			line-height: 16px;
			letter-spacing: 2px;
			color: $title-color
			gap: 15px
			&:hover
				opacity .5
	&__iframe
		position: absolute;
		top: 10%;
		left: 0;
		bottom: 0;
		right: 0;
		width: 100%;
		height: 100%;
		opacity 0
		pointer-events: none




.swiper {
  width: 700px;
  height: 502px;
  position relative
  right: 5px
}

.swiper-slide
	height: 172px
	transition: .7s
	overflow: hidden
	img
		transition: .7s
		transform: scale(1.5)
		transform-origin: top
.swiper-slide-active
	width: 360px!important
	height: 502px!important
	img
		transition: .7s
		transform: scale(1)
		transform-origin: top
	


.swiper-wrapper
	align-items: flex-end

.swiper-button-next
	right: -190px
	left: auto
	height: 25px
	width: 25px
	transform: none
	background: url(../img/main/arrow-slider.svg)!important
	transition: $default-transition
	opacity 1
	z-index 400
	top: 495px
	&:after
		content: none
	&:hover
		opacity .5
.swiper-button-prev
	left: 810px
	right: auto
	height: 25px
	width: 25px
	transform: none
	background: url(../img/main/arrow-slider.svg)!important
	transition: $default-transition
	opacity 1
	z-index 400
	top: 495px
	transform: scale(-1,1)
	&:after
		content: none
	&:hover
		opacity .5


.swiper-pagination-current
	font-style: normal;
	font-weight: 400;
	font-size: 14px;
	line-height: 12px;
	color: #363636;
	&:before
		content: "0"

.swiper-pagination-fraction
	font-style: normal;
	font-weight: 400;
	font-size: 14px;
	line-height: 12px;
	color: rgba(54, 54, 54, .5);
	z-index 300
	left: 400px
.swiper-pagination-total
	font-style: normal;
	font-weight: 400;
	font-size: 14px;
	line-height: 12px;
	color: rgba(54, 54, 54, .5);
	&:before
		content: "0"



span[class^='line']
	overflow: hidden
	display inline-block
	line-height 20px
span[class^='word']
	transform: translateY(100%);
	display: inline-block;
	animation: .3s showtext forwards
	animation-timing-function: ease
	animation-delay: .2s
	text-align: center
span:empty{
	display none
  }



@keyframes showtext {


	0% {
		
		
		transform: translateY(100%)
		}
	100% {
		
		
		transform: translateY(0)
		}
	
}


@keyframes showtitle {


	0% {
		
		opacity 0
		transform: translateY(100%)
		}
	100% {
		
		opacity 1
		transform: translateY(0)
		}
	
}
@keyframes showdesc {


	0% {
		
		opacity 0
		}
	70% {
		
		opacity 0
		}
	100% {
		
		opacity 1
		}
	
}