.services
	margin-bottom 150px
	counter-reset: service
	&__wrapper
		display flex
		justify-content: space-between
		max-width: 1120px
		margin: auto
		flex-wrap: wrap
		gap: 80px
	&__wrapper-hide
		max-width: 315px
		margin: auto
		overflow: hidden
		display none
		.services__item
			padding-top 0
			padding-left 52px
			&:before
				font-size 30px
				line-height 34px
		.services__item-desc
			max-width: 263px
			font-size 16px
			line-height 24px
			margin-bottom 20px
		.services__item-top
			flex-direction: column
			margin-bottom 20px
		.services__item-title
			font-size 30px
			line-height 34px
			max-width: 263px
	.services__pages
		position relative
		right: -25%
		top: 2px
		color: rgba(54, 54, 54, .5)
		display none
		&-span
			color: #363636
	&__title
		text-transform uppercase
		margin-left 200px
		span
			color: $blue
	&__wrapper-top
		display flex
		align-items: flex-start
		justify-content: space-between
		max-width: 1120px
		margin: 0 auto 80px
		.arrow
			position relative
			top 10px
	&__item
		counter-increment: service
		position relative
		padding-top 85px
		width: 520px
		cursor: pointer
		&:before
			content: "0"counter(service)
			font-size: 38px;
			line-height: 44px;
			position absolute
			top: 0
			left: 0
		&:hover
			.arrow
				&:before
					transform: translateX(5px)
			img
				transform: scale(1.1)
		&-pic
			width: 200px
			overflow: hidden
			height: 128px
			img
				transition: 1.2s
				transition-timing-function: linear
		&-title
			color: $blue
			text-transform uppercase
			max-width: 280px
		&-top
			display flex
			justify-content: space-between
			gap 40px
			margin-bottom 30px
		&-desc
			margin-bottom 40px
			max-width: 460px

