//main styles
.main-wrapper
	padding 0 0 0 0
	min-width $min-width
	width 100%
	position relative
	overflow hidden
	min-height 100%
	display flex
	flex-direction column
	justify-content flex-start	


.wrapper
	min-width $min-width
	max-width $max-width
	padding 0 30px 0 30px
	margin 0 auto
	position relative

/* titles */
p
	font($base-font-size, $base-line-height, $text-color, $custom-font-family, 400)

h1
	font($font-size-h1, $line-height-h1, $title-color, $custom-font-family, 400)
	

h2
	font($font-size-h2, $line-height-h2, $title-color, $custom-font-family, 400)

h3
	font($font-size-h3, $line-height-h3, $title-color, $custom-font-family, 400)


a
	&:hover
		opacity .5
	

/* styles */
.main
	min-width $min-width
	width 100%
	order 2
	flex-grow 1

.hero
	margin-bottom 150px
	&__wrapper
		margin: auto
		max-width: 750px
		position relative
		&-bottom
			display flex
			justify-content: space-between
			align-items: center
	&__title
		max-width: 851px
		text-align left
		text-transform uppercase
		margin-bottom 58px
		min-height: 276px
		&-wrapper
			overflow: hidden
			span
				display inline-block
				transform: translateY(100%)
				animation: showtitle .5s cubic-bezier(0.075, 0.82, 0.165, 1);
				animation-delay: .5s
				animation-fill-mode: forwards
			&:last-child span
				color: $blue
				animation-delay: .7s
	&__desc
		position absolute
		width: 385px
		top: 30%
		left: 64%
		animation: showdesc 1.6s linear
		animation-fill-mode: forwards
	&__slider
		margin-top 85px
		width: 100%
		&-wrapper
			margin: auto
			position relative
		&-item
			max-width: 1440px
	&__pages
		position relative
		right: -25%
		top: 2px
		color: rgba(54, 54, 54, .5)
		&-span
			color: #363636
			

.slick-track
	display flex
.slick-prev
	left: 90%
	top: -21%
	width: 25px
	height: 25px
	transform: scale(-1,1)
	background: url(../img/main/arrow-slider.svg)!important
	transition: $default-transition
	opacity 1
	z-index 100
	&:before
		display none
	&:hover
		opacity: .5

.slick-prev[aria-disabled="true"]
	opacity .5
.slick-next[aria-disabled="true"]
	opacity .5
.slick-next
	right: 5%
	top: -21%
	height: 25px
	width: 25px
	transform: none
	background: url(../img/main/arrow-slider.svg)!important
	transition: $default-transition
	opacity 1
	z-index 100
	&:before
		display none
	&:hover
		opacity: .5
